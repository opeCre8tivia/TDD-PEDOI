generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  password String
}


model Users {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String
  lastName   String
  email      String @unique
  mobileNumber String
  password   String
  isActive   Status @default(ACTIVE)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}



enum Status {
  ACTIVE
  INACTIVE
}
